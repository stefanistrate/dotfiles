setlocal tabstop=2
setlocal softtabstop=2
setlocal shiftwidth=2
setlocal expandtab
setlocal smarttab

setlocal cindent
setlocal cinoptions+=(0   " Inside unclosed parentheses.
setlocal cinoptions+=+2s  " Continuation line inside a function.
setlocal cinoptions+=g1   " C++ scope declaration.
setlocal cinoptions+=h1   " Statement after C++ scope declaration.
setlocal cinoptions+=j1   " Java anonymous class.
setlocal cinoptions+=l1   " Case label.
setlocal cinoptions+=N-s  " Namespace.
